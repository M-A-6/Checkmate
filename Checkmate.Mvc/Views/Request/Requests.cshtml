@{
    ViewData["Title"] = "Requests";
}

<h1>Requests</h1>

<button class="btn btn-success" id="btnApprove" data-toggle="modal" data-target="#messageBox"><i class="material-icons" style="font-size:24px;">thumb_up</i>Approve</button>
<button class="btn btn-danger" id="btnReject" data-toggle="modal" data-target="#messageBox"><i class="material-icons" style="font-size:24px;">thumb_down</i>Reject</button>
<button class="btn btn-danger" id="btnCancel" data-toggle="modal" data-target="#messageBox"><i class="material-icons" style="font-size:24px;">cancel</i>Cancel</button>



<table id="dtRequest" class="table table-striped table-bordered" style="width:100%">
</table>

<div class="modal fade" id="messageBox">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Records Selected</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body" id="bodytext">
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="updateRequest" hidden>Yes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<input type="text" value="0" id="requestIds" hidden />
<input type="text" value="0" id="requestTypeId" hidden />
<script src="~/js/request.js" type="text/javascript"></script>

