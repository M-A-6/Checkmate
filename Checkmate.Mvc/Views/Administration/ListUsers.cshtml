@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

<div>
    <br />
    <a asp-action="Register" asp-controller="Account"
       class="btn btn-primary btn-lg">
        @*<i class='material-icons' style='font-size: 24px;'>add_circle_outline</i>*@ Add User
    </a>
    <br />
</div>
<br />
<div>
    @if (Model.Any())
    {


        <table id="dtUsers" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th style="font-weight:bold">#</th>
                    <th>Edit</th>
                    <th>User Id</th>
                    <td>Email</td>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No users created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a user
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="Account" asp-action="Register">
                    Add new user
                </a>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="DeleteConfirm">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body" id="bodytextDelete">
                Are you Sure to delete User
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="yesDelete">Yes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<input type="text" value="0" id="deleteId" hidden />
<script src="~/js/users.js"></script>
