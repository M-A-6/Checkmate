
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration"><i class='material-icons' style='font-size: 24px;'>add_circle_outline</i></a>
    <table id="dtRoles" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Edit</th>
                <th>Role Id</th>
                <th>Role Name</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>      
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}




<div class="modal fade" id="DeleteConfirm">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body" id="bodytextDelete">
                Are you Sure to delete Role
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="yesDelete" >Yes</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>



<input type="text" value="0" id="deleteId" hidden />


<script src="~/js/roles.js"></script>